
@{
}

@model Books

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <div class="bg-light" p-1>
            <h3>@Model.Title</h3>
            <span class="badge badge-pill badge-primary" style="float:right">
                <li>Price: $@Model.Price</li>


            </span>
        </div>
        <ul>
            <li>Title: @Model.Title</li>
            <li>Author: @Model.Author</li>
            <li>Publisher: @Model.Publisher</li>
            <li>ISBN: @Model.ISBN</li>
            <li>Classification: @Model.Classification</li>
            <li>Category: @Model.Category</li>
            <li>Number Of Pages: @Model.PageCount</li>


        </ul>
    </div>
    <form method="post" asp-page="/Cart">

        <input type="hidden" asp-for="@Model.Title"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>

        <span class="card-text">
            <button type="submit" class="btn btn-success btn-primary:focus" btn-sm float-end>Add to Cart</button>

        </span>

    </form>
</div>



