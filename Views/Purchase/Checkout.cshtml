
@{
}

@model Purchase

<h2>Check out now</h2>
<p>Please enter your details, and we will get your books sent to you!</p>

<form method="post" asp-controller="Purchase" asp-action="Checkout">

    <div asp-validation-summary="All" class="text-danger"></div>


    <h4>Ship To</h4>
    adding new stuff here
    <div class="form-group">
        <div class="input-group">
            <label>First and Last Name</label>
            <input type="text" aria-label="First name" class="form-control" asp-for="Name">
            <input type="text" aria-label="Last name" class="form-control">
        </div>

    </div>

    @*<div class="form-group">
        <label asp-for="Name">Name: </label><input asp-for="Name" class="form-control" placeholder="Name" aria-label="Name"></input>
    </div>*@
    <h4>Address</h4>
    <div class="form-group">
        <label asp-for="AddressLine1">Address Line 1: </label><input asp-for="AddressLine1" class="form-control" placeholder="Address" aria-label="Address"></input>
    </div>

    <div class="form-group">
        <label asp-for="AddressLine2">Address Line 2: </label><input asp-for="AddressLine2" class="form-control"></input>
    </div>
    <div class="form-group">
        <label asp-for="AddressLine3">Address Line 3: </label><input asp-for="AddressLine3" class="form-control"></input>
    </div>
    <div class="row">
        <div class="col">
            <label asp-for="City">City: </label><input asp-for="City" class="form-control" placeholder="City" aria-label="City"></input>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label asp-for="State">State: </label><input asp-for="State" class="form-control" placeholder="State" aria-label="State"></input>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Zip">Zip: </label><input asp-for="Zip" class="form-control" placeholder="Zip" aria-label="Zip"></input>
    </div>
    <div class="form-group">
        <label asp-for="Country">Country: </label><input asp-for="Country" class="form-control" placeholder="Country" aria-label="Country"></input>
    </div>



    <div class="float-end">
        <input class="btn btn-primary" type="submit" value="Complete Purchase" />
    </div>
</form>

